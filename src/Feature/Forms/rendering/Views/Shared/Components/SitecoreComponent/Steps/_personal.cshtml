<form id="personalForm" class="form-horizontal" method="post" action="/submitApplication/">
    <div class="form-card">
        <div class="row">
            <div class="col-7">
                <h2 class="fs-title">Personal Information</h2>
            </div>
            <div class="col-5">
                <h2 class="steps">Step <span>3</span> of 7</h2>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-5 col-sm-12">
            <label class="fieldlabels">Official First Name: *</label>
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="first name" asp-for="officialfirstname" required/>
        </div>
        <div class="col-md-5 offset-md-1 col-sm-12">
            <label class="fieldlabels">Official Last Name: *</label>
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="last name" asp-for="officiallastname" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-5 col-sm-12">
            <label class="fieldlabels">Preferred Name: </label>
            <input type="text" class="form-control" id="preferredName" name="preferredName" placeholder="preferred name" asp-for="preferredname" />
        </div>
        <div class="col-md-5 offset-md-1 col-sm-12">
            <label class="fieldlabels">Country/Region/Territory: *</label>
            <select class="form-select dropdown" id="ddlCountry" asp-for="country" required>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-5 col-sm-12">
            <label class="fieldlabels">Company Name: *</label>
            <input type="text" class="form-control" id="companyName" name="companyName" placeholder="company name" asp-for="companyname" required />
        </div>
        <div class="col-md-5 offset-md-1 col-sm-12">
            <label class="fieldlabels">Employment Status: *</label>
            <select class="form-select dropdown" id="ddlEmploymentStatus" asp-for="employmentstatus" required>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-5 col-sm-12">
            <label class="fieldlabels">Mentor: </label>
            <input type="text" class="form-control" id="mentor" name="mentor" placeholder="mentor" asp-for="mentor" />
        </div>
    </div>
    <div class="col-12 toggle-submit">
        <button class="btn btn-secondary" id="btnPrevious" type="button" onclick="javascript:getPrevStep();">Previous</button>
        <button class="btn btn-primary" id="btnStep3" type="submit">Next</button>
    </div>
</form>

